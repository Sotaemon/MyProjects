---
interface Props {
	companyName?: string;
	copyrightYear?: number;
}

const { companyName = 'Sotaemon', copyrightYear = new Date().getFullYear() } = Astro.props;
---

<footer class="footer">
  <div class="footer-content">
    <p>&copy; {copyrightYear} {companyName}. All rights reserved.</p>
    <div class="footer-links">
      <a href="/about">关于</a>
      <a href="/text">文字</a>
      <a href="/image">图像</a>
      <a href="/animation">动态</a>
      <a href="/interaction">交互</a>
      <a href="/coordination">协调</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #221E1D;
    color: #ECEAE0;
    padding: 2rem;
    text-align: center;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .footer p {
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  
  .footer-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  
  .footer-links a {
    color: #ECEAE0;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover {
    color: #FF6B6B;
  }
</style>