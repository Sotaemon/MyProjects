---
const sections = [
  { id: 'introduction', label: '介绍' },
  { id: 'features', label: '特性' },
  { id: 'gallery', label: '画廊' },
  { id: 'testimonials', label: '评价' },
  { id: 'contact', label: '联系' }
];
---

<div class="page-directory" id="pageDirectory">
  <ul>
    {sections.map((section, index) => (
      <li style={`--delay: ${0.6 + index * 0.1}s`}>
        <a href={`#${section.id}`} data-section={section.id}>{section.label}</a>
      </li>
    ))}
  </ul>
</div>

<style>
  .page-directory {
    position: absolute;
    bottom: 2rem;
    right: 8rem;
    z-index: 9;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .page-directory.floating {
    position: fixed;
    top: 50%;
    right: 2rem;
    transform: translateY(-50%);
    bottom: auto;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    animation: floatIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .page-directory ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  
  .page-directory li {
    margin-bottom: 0.8rem;
    color: white;
    font-size: 0.9rem;
    opacity: 0.8;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: slideInRight 0.5s cubic-bezier(0.4, 0, 0.2, 1) var(--delay) both;
    cursor: pointer;
    position: relative;
  }
  
  .page-directory.floating li {
    color: #333;
    opacity: 0.7;
    animation: fadeInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1) var(--delay) both;
  }
  
  .page-directory li:hover {
    opacity: 1;
    transform: translateX(-5px) scale(1.05);
    color: #ECEAE0;
  }
  
  .page-directory.floating li:hover {
    color: #000;
  }
  
  .page-directory a {
    color: white;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: block;
    padding: 5px 10px;
    border-radius: 5px;
  }
  
  .page-directory.floating a {
    color: #333;
  }
  
  .page-directory a:hover {
    color: #ECEAE0;
    background: rgba(255, 255, 255, 0.2);
    transform: translateX(-5px) scale(1.05);
  }
  
  .page-directory.floating a:hover {
    color: #000;
    background: rgba(255, 255, 255, 0.3);
  }
  
  .page-directory a.active {
    color: #E9633B !important;
    font-weight: bold;
    transform: scale(1.1);
    animation: pulse 1.5s infinite;
  }
  
  .page-directory.floating a.active {
    background: rgba(233, 99, 59, 0.1);
    border-radius: 5px;
    padding: 7px 12px;
  }
  
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 0.7;
      transform: translateY(0);
    }
  }
  
  @keyframes floatIn {
    from {
      opacity: 0;
      transform: translateY(-50%) translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateY(-50%) translateX(0);
    }
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }
  
  .page-directory.floating[data-bg="introduction"] {
    background-color: rgba(236, 234, 224, 0.9);
  }
  
  .page-directory.floating[data-bg="features"] {
    background-color: rgba(99, 170, 156, 0.9);
    color: white;
  }
  
  .page-directory.floating[data-bg="gallery"] {
    background-color: rgba(236, 234, 224, 0.9);
  }
  
  .page-directory.floating[data-bg="testimonials"] {
    background-color: rgba(233, 99, 59, 0.9);
    color: white;
  }
  
  .page-directory.floating[data-bg="contact"] {
    background-color: rgba(34, 30, 29, 0.9);
    color: white;
  }
  
  .page-directory.floating[data-bg="features"] a,
  .page-directory.floating[data-bg="testimonials"] a,
  .page-directory.floating[data-bg="contact"] a {
    color: white;
  }
  
  .page-directory.floating[data-bg="features"] a:hover,
  .page-directory.floating[data-bg="testimonials"] a:hover,
  .page-directory.floating[data-bg="contact"] a:hover {
    color: #ECEAE0;
  }
  
  .page-directory.floating[data-bg="features"] a.active,
  .page-directory.floating[data-bg="testimonials"] a.active,
  .page-directory.floating[data-bg="contact"] a.active {
    color: #ECEAE0 !important;
  }
</style>