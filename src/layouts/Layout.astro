---
interface Props {
	title?: string;
}

const { title = '我的Astro网站' } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@400;500;700&display=swap" rel="stylesheet">
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Noto Serif SC', serif;
      height: 100vh;
      overflow-x: hidden;
    }
    
    h1, h2 {
      font-family: 'Noto Serif SC', serif;
      font-weight: 700;
    }
  </style>
</head>
<body>
  <slot />
</body>
</html>